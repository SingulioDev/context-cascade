{
  "hooks": {
    "UserPromptSubmit": [
      {
        "type": "command",
        "command": "${CLAUDE_PLUGIN_ROOT}/hooks/five-phase-enforcer.sh",
        "timeout": 5000
      }
    ],
    "PreToolUse": [
      {
        "matcher": {
          "tool_name_regex": "^(Write|Edit)$"
        },
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/sop-compliance-verifier.sh",
            "timeout": 3000
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": {
          "tool_name_regex": "^(Write|Edit)$"
        },
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/skill-completion-verifier.sh",
            "timeout": 3000
          }
        ]
      }
    ],
    "Stop": [
      {
        "type": "command",
        "command": "${CLAUDE_PLUGIN_ROOT}/hooks/recursive-improvement-gate.sh",
        "timeout": 5000
      }
    ]
  }
}
